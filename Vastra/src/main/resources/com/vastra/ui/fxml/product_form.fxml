<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.vastra.ui.controllers.ProductFormController"
            prefWidth="800" prefHeight="700">

    <top>
        <VBox style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Add New Product"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Fill in the product details and barcode will be generated"
                   style="-fx-text-fill: white; -fx-font-size: 12px;"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="15">
                <padding>
                    <Insets top="20" bottom="20" left="30" right="30"/>
                </padding>

                <!-- Basic Information Section -->
                <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white;">
                    <Label text="BASIC INFORMATION" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>

                    <GridPane hgap="15" vgap="12">
                        <Label text="* Product Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nameField"
                                   promptText="Enter product name"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   prefWidth="300"/>

                        <Label text="Variant:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="variantField"
                                   promptText="Size, Color, etc."
                                   GridPane.rowIndex="0" GridPane.columnIndex="3"
                                   prefWidth="200"/>

                        <Label text="Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="categoryField"
                                   promptText="e.g., Clothing, Electronics"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Brand:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="brandField"
                                   promptText="Brand name"
                                   GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                    </GridPane>
                </VBox>

                <!-- SKU Section -->
                <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #FFFDE7;">
                    <Label text="PRODUCT CODE" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>

                    <VBox spacing="8">
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="SKU / Product Code:" minWidth="150"/>
                            <TextField fx:id="skuField"
                                       promptText="Leave empty for auto-generation"
                                       prefWidth="250"/>
                        </HBox>
                        <Label text="ðŸ’¡ A unique barcode will be auto-generated for printing stickers"
                               style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-padding: 0 0 0 160;"/>
                        <Label text="ðŸ“Œ After saving, print barcode labels and stick them on products"
                               style="-fx-text-fill: #FF6F00; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 0 0 0 160;"/>
                    </VBox>
                </VBox>

                <!-- Pricing Section -->
                <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #E8F5E9;">
                    <Label text="PRICING &amp; TAX" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>

                    <GridPane hgap="15" vgap="12">
                        <Label text="MRP (â‚¹):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="mrpField"
                                   promptText="0.00"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   prefWidth="150"/>

                        <Label text="* Selling Price (â‚¹):" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="sellPriceField"
                                   promptText="0.00"
                                   GridPane.rowIndex="0" GridPane.columnIndex="3"
                                   prefWidth="150"/>

                        <Label text="Purchase Price (â‚¹):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="purchasePriceField"
                                   promptText="0.00"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="* GST %:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="gstField"
                                   text="18"
                                   promptText="0-28"
                                   GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                        <Label text="HSN Code:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="hsnField"
                                   promptText="Optional"
                                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Inventory Section -->
                <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: #FFF3E0;">
                    <Label text="INVENTORY" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>

                    <GridPane hgap="15" vgap="12">
                        <Label text="* Opening Stock:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="stockField"
                                   promptText="0"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   prefWidth="150"/>

                        <Label text="Reorder Level:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="reorderField"
                                   text="5"
                                   promptText="Alert when stock reaches"
                                   GridPane.rowIndex="0" GridPane.columnIndex="3"
                                   prefWidth="150"/>

                        <Label text="Unit:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="unitCombo"
                                  GridPane.rowIndex="1" GridPane.columnIndex="1"
                                  prefWidth="150"/>
                    </GridPane>
                </VBox>

                <!-- Description Section -->
                <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 15; -fx-background-color: white;">
                    <Label text="ADDITIONAL DETAILS" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>

                    <Label text="Description:"/>
                    <TextArea fx:id="descriptionField"
                              promptText="Product description, features, etc."
                              prefRowCount="3"
                              wrapText="true"/>
                </VBox>

                <Label text="* Required fields" style="-fx-text-fill: red; -fx-font-size: 11px;"/>
            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <Button text="ðŸ’¾ Save Product"
                    onAction="#onSave"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
                    prefWidth="200"
                    prefHeight="40"/>
            <Button text="Cancel"
                    onAction="#onCancel"
                    style="-fx-background-color: #757575; -fx-text-fill: white;"
                    prefWidth="120"
                    prefHeight="40"/>
        </HBox>
    </bottom>
</BorderPane>